<%
    const Sitemap = require('sitemap');
    // get the page directly to hook it into webpack dev build process
    const page = Sitemap.getPage(Page);

    const Strings = page.common.modalMenu;
    const Locale = page.output.locale;
    const BaseUrl = page.output.href;

    const HeaderLinks = page.common.header.links;

    const getLocaleHref = (lang) => Sitemap.getLocaleHref(page, lang);
%>


<div id="mobile-menu" class="mobile-menu s-visible">
    <div class="bg-noise"></div>
    <div class="mobile-menu-background">
        <div class="bg-ellipse">
            <img data-src="../../assets/img/bg/Ellipse3.png" class="lazy" data-load-priority="0" alt="">
        </div>

    </div>

    <div class="mobile-menu__header">
        <a class="logo" href="<%= Strings.logoLink %>" aria-label="Idle finance">
            <%= require('../../assets/img/idle-logo.svg?raw') %>
        </a>
        <div class="mobile-menu-button">
            <div class="close-btn"></div>
        </div>
    </div>
    <div class="mobile-menu__content">
        <div class="navigation">
            <div class="navigation__link">
                <a class="navigation__link-text label-1" href="<%= HeaderLinks[1].linkSrc %>" target="_blank">
                    <%= HeaderLinks[1].linkTitle %>
                </a>
            </div>
            <div class="navigation__link">
                <a class="navigation__link-text label-1" href="<%= HeaderLinks[2].linkSrc %>" target="_blank">
                    <%= HeaderLinks[2].linkTitle %>
                </a>
            </div>
            <div class="navigation__link">
                <div class="navigation__link-text label-1 anchor-item" data-anchor="<%= HeaderLinks[4].dataAnchor %>" href="">
                    <%= HeaderLinks[4].linkTitle %>
                </div>
            </div>
            <div class="navigation__link">
                <a class="navigation__link-text label-1" href="<%= HeaderLinks[5].linkSrc %>" target="_blank">
                    <%= HeaderLinks[5].linkTitle %>
                </a>
            </div>
        </div>

        <div class="button">
            <a class="btn btn-main" href="<%= Strings.btnEnter.btnSrc %>" target="_blank" aria-label="<%= Strings.btnEnter.btnTitle %>">
                <span class="btn-label btn-label-1"><%= Strings.btnEnter.btnTitle %></span>
            </a>
        </div>
    </div>
</div>
