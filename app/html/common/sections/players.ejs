                        <p class="desc-3"><%= item.desc %></p>
                    </div>
                    <div class="buttons-block card-desc-anim-js">
                        <div class="button anim-item-js">
                            <a class="btn btn-main" href="<%= item.btnSrc %>" target="_blank" rel="nofollow noopener noreferrer" aria-label="<%= item.btnTitle %>">
                                <span class="btn-label btn-label-2"><%= item.btnTitle %></span>
                            </a>
                        </div>
                        <div class="button anim-item-js">
                            <a class="btn btn-arrow" href="<%= item.linkHref %>" target="_blank" rel="nofollow noopener noreferrer" aria-label="<%= item.linkTitle %>">
                                <span class="btn-label btn-label-2"><%= item.linkTitle %></span>
                                <div class="btn-icon">
                                    <div class="btn-icon__image">
                                        <%= require('../../../assets/img/icons/arrow.svg?raw') %>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
