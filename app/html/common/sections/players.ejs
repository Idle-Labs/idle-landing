        <div class="points">
            <div class="point text-block">
                <h2 class="text-block__title title-h3 title-anim-js"><%= Strings.title %></h2>
                <div class="text-block__subtitle subtitle-anim-js">
                    <span class="subtitle-1"><%= Strings.subtitle %></span>
                </div>
            </div>
            <% Strings.points.forEach((item, i) => { ;%>
                <div class="point">
                    <div
                        class="point__logo card-icon-anim-js logo-lottie lazy"
                        data-lottie-path="../../../assets/lottie/icons/players/icon<%=i+1%>/lottie.json"
